<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_margin="3dp"
    android:paddingBottom="6dp"
    android:background="@drawable/background_unassigned_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delivered15KgAmtTV"
        />

    <TextView
        android:id="@+id/delivered15KgAmtTV"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:text=" 0 "
        android:textAlignment="center"
        android:layout_margin="6dp"
        android:background="@drawable/background_fifteen_kg_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delivered10KgAmtTV"
        />

    <TextView
        android:id="@+id/delivered10KgAmtTV"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:text=" 0 "
        android:textAlignment="center"
        android:layout_margin="6dp"
        android:background="@drawable/background_ten_kg_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/paidTV"
        />

    <TextView
        android:id="@+id/paidTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 5 "
        android:layout_margin="6dp"
        android:background="@drawable/background_unpaid_background"
        app:layout_constraintEnd_toStartOf="@id/deliveryDateTV"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/deliveryDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:visibility="gone"
        android:background="@drawable/background_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>